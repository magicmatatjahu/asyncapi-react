{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2017", "es2019"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true
  },
  "include": ["./library", "./playground"],
  "exclude": ["*/node_modules/**/*", "*/lib/**/*"]
}
